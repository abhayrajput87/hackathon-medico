
<section >
  <div class="flex p-8 mx-auto rounded-xl flex-col items-center space-y-4 mt-16  w-3/4  md:w-1/3 bg-gray-800  justify-center " >
      <div class="w-6/12 sm:w-4/12 px-4">
          <img src="https://www.creative-tim.com/learning-lab/tailwind-starter-kit/img/team-2-800x800.jpg" alt="..." class="shadow rounded-full max-w-full h-auto align-middle border-none" />
      </div>
      <h1 class="text-2xl text-white font-semibold  " ><%= patient %> </h1>
      <form action="/submitReport/<%= userid  %>" method="post" class="w-full flex flex-col space-y-4 " enctype="multipart/form-data">
          
          <div>
          <label class="block mb-2 text-sm font-semibold mx-auto w-3/4  text-gray-900 dark:text-white" for="file_input">Upload Report:</label>
          <input name="report" class="block p-2.5 w-3/4 mx-auto bg-gray-700 text-sm   rounded-lg border  border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" id="file_input" type="file">
          </div>
        
          <label for="message" class="block mb-2 w-3/4 mx-auto text-sm font-medium text-gray-900 dark:text-white">Report Summary</label>
          <textarea id="message" name="message" rows="4" class="block p-2.5 w-3/4 mx-auto bg-gray-700 text-sm   rounded-lg border  border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" placeholder="Write Report Summary here..."></textarea>
          <button type="submit" class="text-white bg-brightRed hover:bg-brightRedLight px-4 py-2 rounded-full " >Send Report </button>
      </form>
  </div>
</section>